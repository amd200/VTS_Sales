@model IEnumerable<Books.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customer</h2>


<a href="@Url.Action("Create")" class="btn btn-primary">Add New</a>


@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName @customer.LastName</td>
                    <td>@customer.Gender</td>
                    <td>@customer.Address</td>
                    <td>@customer.Phone</td>


                    <td>
                        <a href="@Url.Action("Edit", "Customer", new { id = customer.Id })" class="btn btn-primary">
                            <i class="icofont-ui-edit"></i>
                            Edit
                        </a>
                        <a href="javascript:;" class="btn btn-danger js-delete" data-id="@customer.Id">
                            <i class="icofont-ui-close"></i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No bookings available at the moment.

    </div>
}

